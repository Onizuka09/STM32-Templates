    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debugging STLINK STM32F4",
            "type": "cortex-debug", 
            "request":"launch",
            "servertype": "stlink",
            "cwd": "${workspaceFolder}",
            "executable": "./Template_proj.elf",
            "armToolchainPath": "/opt/gcc-arm-none-eabi-10.3-2021.10/bin/",
            "gdbPath": "/opt/gcc-arm-none-eabi-10.3-2021.10/bin/arm-none-eabi-gdb",
            "device": "STM32F401RETx",
            "configFiles": [],
            "svdFile": "${workspaceFolder}/STM32F401.svd", 
            "runToEntryPoint": "main",
            "postRestartCommands": [
                "monitor reset halt",
                "load"
            ],
            "preLaunchTask": "Build Project"
        },
        {
            "name": "Debugging OpenOCD STM32F4",
            "type": "cortex-debug", 
            "request":"launch",
            "servertype": "openocd",
            "gdbTarget" :"localhost:3333",
            "cwd": "${workspaceFolder}",
            "executable": "./Template_proj.elf",
            "armToolchainPath": "/opt/gcc-arm-none-eabi-10.3-2021.10/bin/",
            "gdbPath": "/opt/gcc-arm-none-eabi-10.3-2021.10/bin/arm-none-eabi-gdb",
            "device": "STM32F401RETx",
            "configFiles": [
                "interface/stlink-v2.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "${workspaceFolder}/STM32F401.svd", 
            "runToEntryPoint": "main",
            "postRestartCommands": [
                "monitor reset halt",
                "load"
            ],
            "preLaunchTask": "Build Project"
        }
    ]
}